pipeline {
    agent any

    environment {
        DOCKER_REGISTRY = 'docker.io'
        DOCKER_IMAGE = 'myimage'  // Replace with your desired image name
    }

    stages {
        stage('Checkout GitHub Repository') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('test') {  // Make sure 'test' is the correct directory where your Dockerfile is
                    script {
                        // Build the Docker image
                        bat "docker build -t ${DOCKER_REGISTRY}/${DOCKER_IMAGE} ."
                    }
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    script {
                        // Docker login using the token stored in Jenkins credentials
                        bat """
                            echo %DOCKER_PASS% | docker login -u %DOCKER_USER% --password-stdin
                        """
                    }
                }

                script {
                    // Push the Docker image to Docker Hub
                    bat "docker push ${DOCKER_REGISTRY}/${DOCKER_IMAGE}"
                }
            }
        }
    }

    post {
        always {
            cleanWs()  // Clean up workspace after execution
        }
    }
}
