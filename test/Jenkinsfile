pipeline {
    agent any

    environment {
        DOCKER_IMAGE_NAME = 'myimage'  // Define your Docker image name
        DOCKER_REPO = 'docker.io'     // Docker registry URL
    }

    stages {
        stage('Checkout GitHub Repository') {
            steps {
                script {
                    // Clone the Git repository using GitHub credentials stored in Jenkins
                    checkout scm
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image
                    sh 'docker build -t ${DOCKER_REPO}/${DOCKER_IMAGE_NAME} .'
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials', 
                                                  usernameVariable: 'DOCKER_USERNAME', 
                                                  passwordVariable: 'DOCKER_PASSWORD')]) {
                    script {
                        // Log in to Docker Hub
                        sh """
                        echo \$DOCKER_PASSWORD | docker login -u \$DOCKER_USERNAME --password-stdin
                        docker push \$DOCKER_REPO/\$DOCKER_USERNAME/\$DOCKER_IMAGE_NAME
                        """
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Docker image was successfully built and pushed to Docker Hub!'
        }
        failure {
            echo 'Pipeline failed, check the logs for details.'
        }
    }
}
